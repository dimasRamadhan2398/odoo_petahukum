<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Legal Article Views -->
        <record id="legal_article_view_tree" model="ir.ui.view">
            <field name="name">legal.article.tree</field>
            <field name="model">legal.article</field>
            <field name="arch" type="xml">
                <list string="Legal Articles">
                    <field name="name"/>
                    <field name="category_id"/>
                    <!-- <field name="type_id"/> -->
                    <field name="author_id"/>
                    <field name="publish_date"/>
                    <field name="view_count"/>
                    <field name="website_published"/>
                </list>
            </field>
        </record>

        <record id="legal_article_view_form" model="ir.ui.view">
            <field name="name">legal.article.form</field>
            <field name="model">legal.article</field>
            <field name="arch" type="xml">
                <form string="Legal Article">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Judul artikel..."/>
                                <field name="category_id"/>
                                <!-- <field name="type_id"/> -->
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="author_id"/>
                            </group>
                            <group>
                                <field name="publish_date"/>
                                <field name="view_count" readonly="1"/>
                                <field name="website_published"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Konten">
                                <field name="summary" placeholder="Ringkasan artikel..."/>
                                <field name="content" widget="html"/>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="website_meta_title"/>
                                    <field name="website_meta_description"/>
                                    <field name="website_meta_keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

